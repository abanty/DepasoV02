<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/itemanuncio_cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="407dp">

            <ImageView
                android:id="@+id/btn_favorito"
                android:layout_width="29dp"
                android:layout_height="32dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/precioanuncio"
                app:layout_constraintTop_toBottomOf="@+id/anuncio_descripcion"
                app:srcCompat="@drawable/ic_phone_black_24dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/anuncio_usuario_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/anuncio_usuario_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Nombre de usuario"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/anuncio_usuario_imagen"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fecha_anuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Fecha de anuncio"
                app:layout_constraintStart_toEndOf="@+id/anuncio_usuario_imagen"
                app:layout_constraintTop_toBottomOf="@+id/anuncio_usuario_nombre" />

            <ImageView
                android:id="@+id/imagen_lista_anuncio"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/anuncio_usuario_imagen"
                app:srcCompat="@drawable/image_placeholder" />

            <TextView
                android:id="@+id/anuncio_descripcion"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="5dp"
                android:text="Aqui va el texto"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorFaceDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagen_lista_anuncio" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_divider"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/celularanuncio"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-8dp"
                android:text="991611444"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_favorito"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/anuncio_descripcion"
                app:layout_constraintVertical_bias="0.326" />

            <TextView
                android:id="@+id/anuncio_comentario"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="8dp"
                android:text="0.00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/anuncio_descripcion"
                app:layout_constraintVertical_bias="0.178" />

            <ImageView
                android:id="@+id/precioanuncio"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/anuncio_comentario"
                app:layout_constraintTop_toBottomOf="@+id/anuncio_descripcion"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/soles" />

            <TextView
                android:id="@+id/modalidaddepago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Modo de Alquier"
                android:textStyle="bold"
                android:textColor="@color/colorFaceDark"
                app:layout_constraintBottom_toTopOf="@+id/imagen_lista_anuncio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.919"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.459" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>